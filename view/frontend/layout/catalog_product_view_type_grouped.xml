<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.form.content">
            <block class="Magento\Framework\View\Element\Template" name="ourpass.checkout.button"
                   template="OurPass_Checkout::ourpass-pdp-button.phtml" after="product.info.addtocart">
                <arguments>
                    <argument name="view_model" xsi:type="object">OurPass\Checkout\ViewModel\CheckoutButton</argument>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="ourpassCheckout" xsi:type="array">
                                <item name="component" xsi:type="string">OurPass_Checkout/js/view/pdp/pdp-grouped-ourpass-button</item>
                                <item name="config" xsi:type="array">
                                    <item name="template" xsi:type="string">OurPass_Checkout/pdp/pdp-ourpass-button</item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
